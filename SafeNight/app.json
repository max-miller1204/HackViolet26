{
  "expo": {
    "name": "SafeNight",
    "slug": "SafeNight",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "safenight",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0A1A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.safenight.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SafeNight uses your location to share with emergency contacts and find nearby venues.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SafeNight uses your location to share with emergency contacts during active plans.",
        "NSMicrophoneUsageDescription": "SafeNight uses the microphone to log drinks by voice and detect your SOS code word."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0F0A1A"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.safenight.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO",
        "VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "SafeNight uses your location for emergency contacts and venue discovery."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "SafeNight uses the microphone to log drinks by voice and detect your SOS code word."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#8B5CF6"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "safenight-hackathon-2024"
      }
    }
  }
}
